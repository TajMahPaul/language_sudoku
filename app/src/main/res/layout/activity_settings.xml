<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/native_language_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, I speak..."
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <Spinner
            android:id="@+id/native_language_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/foreign_language_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and I want to learn..."
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <Spinner
            android:id="@+id/foreign_language_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>