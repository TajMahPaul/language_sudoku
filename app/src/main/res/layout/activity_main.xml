<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout
        android:layout_width="384dp"
        android:layout_height="384dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TableRow
            android:layout_width="match_parent"
            android:id="@+id/tableRow1"
            android:layout_height="128dp">

            <fragment
                android:id="@+id/cellGroupFragment"
                android:name="sudoku.android.groupxi.com.groupxisudoku.fragments.CellGroupFragment"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:tag="0"
                android:layout_weight="1" />

            <fragment
                android:id="@+id/cellGroupFragment2"
                android:name="sudoku.android.groupxi.com.groupxisudoku.fragments.CellGroupFragment"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:tag="1"
                android:layout_weight="1" />

            <fragment
                android:id="@+id/cellGroupFragment3"
                android:name="sudoku.android.groupxi.com.groupxisudoku.fragments.CellGroupFragment"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:tag="2"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="128dp">

            <fragment
                android:id="@+id/cellGroupFragment4"
                android:name="sudoku.android.groupxi.com.groupxisudoku.fragments.CellGroupFragment"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:tag="3"
                android:layout_weight="1" />

            <fragment
                android:id="@+id/cellGroupFragment5"
                android:name="sudoku.android.groupxi.com.groupxisudoku.fragments.CellGroupFragment"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:tag="4"
                android:layout_weight="1" />

            <fragment
                android:id="@+id/cellGroupFragment6"
                android:name="sudoku.android.groupxi.com.groupxisudoku.fragments.CellGroupFragment"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:tag="5"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="128dp">

            <fragment
                android:id="@+id/cellGroupFragment7"
                android:name="sudoku.android.groupxi.com.groupxisudoku.fragments.CellGroupFragment"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:tag="6" />

            <fragment
                android:id="@+id/cellGroupFragment8"
                android:name="sudoku.android.groupxi.com.groupxisudoku.fragments.CellGroupFragment"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:tag="7" />

            <fragment
                android:id="@+id/cellGroupFragment9"
                android:name="sudoku.android.groupxi.com.groupxisudoku.fragments.CellGroupFragment"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:tag="8"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94">

        <Button
            android:id="@+id/num_button1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="1"/>

        <Button
            android:id="@+id/num_button2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="2"/>

        <Button
            android:id="@+id/num_button3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="3"/>

        <Button
            android:id="@+id/num_button4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="4"/>

        <Button
            android:id="@+id/num_button5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="5"/>

        <Button
            android:id="@+id/num_button6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="6"/>

        <Button
            android:id="@+id/num_button7"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="7"/>

        <Button
            android:id="@+id/num_button8"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="8"/>

        <Button
            android:id="@+id/num_button9"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="9"/>
    </LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:onClick="onGoBackButtonClicked"
        android:text="@string/go_back_button"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.985" />



</android.support.constraint.ConstraintLayout>