<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBackgroundColor"
    android:orientation="vertical">

    <Button
        android:id="@+id/Uploadbutton"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="Upload"
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/infoButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Listening"
        android:layout_width="170dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="Listening Mode: Off"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Uploadbutton"
        app:layout_constraintTop_toBottomOf="@+id/Uploadbutton" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="Xi"
            android:textColor="@color/accent2"
            android:textSize="80dp" />

        <Button
            android:id="@+id/playButton"
            style="@android:style/Widget.Button"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:onClick="playButton"
            android:text="New Game"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/resumeButton"
            style="@android:style/Widget.Button"
            android:layout_width="308dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:onClick="resumeButton"
            android:text="Resume"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/languageButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:text="English"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/difficultyButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:text="  difficulty 1  "
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_margin="30dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_button"
        android:onClick="settingsButton"
        android:text="Settings"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_margin="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_button"
        android:clickable="false"
        android:text="Info"
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/settingsButton"
        app:layout_constraintEnd_toStartOf="@+id/settingsButton" />
</android.support.constraint.ConstraintLayout>
